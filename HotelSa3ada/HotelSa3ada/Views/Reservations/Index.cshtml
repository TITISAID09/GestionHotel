@model IEnumerable<HotelSa3ada.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdChambreNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClientNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdChambreNavigation.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClientNavigation.IdClient)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReservation">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdReservation">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReservation">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
