@model IEnumerable<HotelSa3ada.Models.Paiement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePaiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModePaiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdReservationNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Montant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePaiement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModePaiement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdReservationNavigation.IdReservation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaiement">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaiement">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaiement">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
